@model ProvaConceito.FrontEnd.Models.EscolaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edição</h1>

<h4>Escola</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EscolaId" class="control-label"></label>
                <input asp-for="EscolaId" class="form-control" readonly  />
                <span asp-validation-for="EscolaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoINEP" class="control-label"></label>
                <input asp-for="CodigoINEP" class="form-control" />
                <span asp-validation-for="CodigoINEP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
