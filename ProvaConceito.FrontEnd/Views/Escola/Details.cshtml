@model ProvaConceito.FrontEnd.Models.EscolaViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Escola</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EscolaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EscolaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoINEP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoINEP)
        </dd>
        <dt class="col-sm-2">
            Alunos
        </dt>
        <dd class="col-sm-10">
            <table class="table">

                <thead>
                    <tr>
                        <th>
                            Código
                        </th>
                        <th>
                            Nome
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Turmas)
                    {
                        foreach (var aluno in item.Alunos)
                        {
                            <tr>
                                <td>
                                    @Html.HiddenFor(modelItem => aluno.AlunoId)
                                    @Html.DisplayFor(modelItem => aluno.AlunoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => aluno.Nome)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Turmas)
        </dt>
        <dd class="col-sm-10">
            <table class="table">

                <thead>
                    <tr>
                        <th>
                            Código
                        </th>
                        <th>
                            Descrição
                        </th>
                        <th>
                            Turno
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Turmas)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(modelItem => item.TurmaId)
                                @Html.DisplayFor(modelItem => item.TurmaId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Turno)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
        <dt class="col-sm-2">
            Professores
        </dt>
        <dd class="col-sm-10">
            <table class="table">

                <thead>
                    <tr>
                        <th>
                            Código
                        </th>
                        <th>
                            Nome
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Turmas)
                    {
                        foreach (var professor in item.Professores)
                        {
                            <tr>
                                <td>
                                    @Html.HiddenFor(modelItem => professor.Professor.ProfessorId)
                                    @Html.DisplayFor(modelItem => professor.Professor.ProfessorId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => professor.Professor.Nome)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.EscolaId }) |
    <a asp-action="Index">Voltar</a>
</div>
