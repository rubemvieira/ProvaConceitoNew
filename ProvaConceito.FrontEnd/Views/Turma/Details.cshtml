@model ProvaConceito.FrontEnd.Models.TurmaViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Turma</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TurmaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TurmaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Turno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Turno)
        </dd>
        <dt class="col-sm-2">
            Escola
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Escola.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alunos)
        </dt>
        <dd class="col-sm-10">
            <table class="table">

                <thead>
                    <tr>
                        <th>
                            Código
                        </th>
                        <th>
                            Nome
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Alunos)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(modelItem => item.AlunoId)
                                @Html.DisplayFor(modelItem => item.AlunoId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Professores)
        </dt>
        <dd class="col-sm-10">
            <table class="table">

                <thead>
                    <tr>
                        <th>
                            Código
                        </th>
                        <th>
                            Nome
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Professores)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(modelItem => item.Professor.ProfessorId)
                                @Html.DisplayFor(modelItem => item.Professor.ProfessorId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Professor.Nome)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.TurmaId }) |
    <a asp-action="Index">Voltar</a>
</div>
