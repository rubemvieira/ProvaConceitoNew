@model ProvaConceito.FrontEnd.Models.TurmaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edição</h1>

<h4>Turma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TurmaId" class="control-label"></label>
                <input asp-for="TurmaId" class="form-control" readonly />
                <span asp-validation-for="TurmaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Turno" class="control-label"></label>
                <select asp-for="Turno" class="form-control">
                    <option value="">Selecione</option>
                    <option value="Matutino">Matutino</option>
                    <option value="Vespertino">Vespertino</option>
                    <option value="Noturno">Noturno</option>
                </select>
                <span asp-validation-for="Turno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serie" class="control-label"></label>
                <select asp-for="Serie" class="form-control">
                    <option value="">Selecione</option>
                    <option value="1ª Fundamental">1ª Fundamental</option>
                    <option value="2ª Fundamental">2ª Fundamental</option>
                    <option value="3ª Fundamental">3ª Fundamental</option>
                    <option value="4ª Fundamental">4ª Fundamental</option>
                    <option value="5ª Fundamental">5ª Fundamental</option>
                    <option value="6ª Fundamental">6ª Fundamental</option>
                    <option value="7ª Fundamental">7ª Fundamental</option>
                    <option value="8ª Fundamental">8ª Fundamental</option>
                    <option value="9ª Fundamental">9ª Fundamental</option>
                    <option value="1ª Médio">1ª Médio</option>
                    <option value="2ª Médio">2ª Médio</option>
                    <option value="3ª Médio">3ª Médio</option>
                    <option value="Superior">Superior</option>
                </select>
                <span asp-validation-for="Turno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EscolaId" class="control-label"></label>
                <select asp-for="EscolaId"
                        asp-items="@ViewBag.Escolas"></select>
                <span asp-validation-for="EscolaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
