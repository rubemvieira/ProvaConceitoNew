@model ProvaConceito.FrontEnd.Models.AlunoViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlunoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlunoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento, "{0:dd/MM/yyyy}")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class="col-sm-2">
            Escola
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Turma.Escola.Nome)
        </dd>
        <dt class="col-sm-2">
            Turma
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Turma.Descricao)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.AlunoId }) |
    <a asp-action="Index">Voltar</a>
</div>
